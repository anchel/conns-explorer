// @see - https://www.electron.build/configuration/configuration
{
  $schema: 'https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json',
  appId: 'com.anchel.app.desktop.kafka',
  asar: true,
  productName: 'Conns Explorer',
  publish: [
    {
      provider: 'generic',
      url: 'https://download.anchel.cn/app/conns-explorer/',
      channel: 'latest-${arch}',
    },
    {
      provider: 'github',
      releaseType: 'draft',
      channel: 'latest-${arch}',
    },
  ],
  directories: {
    output: 'release/${version}',
  },
  files: [
    'dist',
    'dist-electron'
  ],
  mac: {
    target: [
      {
        target: 'dmg',
        arch: [
          'x64',
          'arm64',
        ],
      }
    ],
    artifactName: '${name}-${version}-darwin-${arch}-installer.${ext}',
    provisioningProfile: 'build/profilekafkadesktop.provisionprofile',
    extendInfo: {
      ITSAppUsesNonExemptEncryption: false,
    },
    notarize: {
      teamId: '9J3DW26EZ6',
    },
  },
  win: {
    target: [
      {
        target: 'nsis',
        arch: [
          'x64',
        ],
      },
    ],
    artifactName: '${name}-${version}-windows-${arch}-setup.${ext}',
  },
  nsis: {
    oneClick: false,
    perMachine: false,
    allowToChangeInstallationDirectory: true,
    deleteAppDataOnUninstall: false,
  },
  linux: {
    target: [
      {
        target: 'AppImage',
        arch: [
          'x64',
          'arm64',
        ],
      },
    ],
    artifactName: '${name}-${version}-linux-${arch}.${ext}',
  },
}
